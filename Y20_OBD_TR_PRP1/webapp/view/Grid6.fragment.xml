<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns="sap.m" displayBlock="true">
	<VBox height="15rem">
											<table:Table cellClick="onCellClick" id="tblTroll" noData="keine Daten" visibleRowCount="4"
												selectionMode="Single" rows="{trollTableModel>/items}" selectionBehavior="RowOnly" enableColumnReordering="false" enableCellFilter="true">
												<table:columns>
													<table:Column>
														<Label text="{i18n>TrollTable_Col1}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{trollTableModel>SeqNo}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>TrollTable_Col2}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{trollTableModel>Trolley}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>TrollTable_Col3}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{trollTableModel>ActivArea}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>TrollTable_Col4}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{trollTableModel>Tot}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>TrollTable_Col5}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{trollTableModel>NAs}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>TrollTable_Col6}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{trollTableModel>Ass}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
												</table:columns>
											</table:Table>
	</VBox>
	<VBox height="5rem">
		<FlexBox justifyContent="End" alignItems="End" class="sapUiMediumMarginTop">
			<items>
				<Button text="{i18n>BtnAssign}" enabled="{ELEMENTS>/btn_assign/enabled}" visible="{ELEMENTS>/btn_assign/visible}" id="btn_assign" press="onGoToStep2" class="sapUiSmallMargin customButton"/>
			</items>
		</FlexBox>
	</VBox>

</core:FragmentDefinition>