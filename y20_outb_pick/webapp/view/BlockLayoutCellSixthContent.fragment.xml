<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:acm="y20_outb_pick.controller">
	<VBox height="100%" justifyContent="Start">


		<VBox height="90%" class="sapUiLargeMarginTop" justifyContent="Start">
			<VBox height="80%">
				<!-- <FlexBox visible="false" class="sapUiTinyMargin" justifyContent="SpaceBetween">
					<Text class="customTextMedium" text="{i18n>destBinHU}"/>
					<Text class="customTextSmall" text="{modelTrolleyNav>/LOGPOS}" />
				</FlexBox> -->

				<FlexBox class="sapUiTinyMargin sapUiSmallMarginTop" justifyContent="SpaceBetween">
					<Text class="customTextMedium" text="{i18n>destHU}"/>
					<Text class="customTextSmall" text="{modelTrolleyNav>/HU}" />
				</FlexBox>

				<FlexBox visible="{  path: 'modelWarehouseTaskNav>/NEWHU',
                    			 formatter: '.formatter.enabledInputFormatter'}" class="sapUiTinyMargin sapUiSmallMarginTop" justifyContent="SpaceBetween">
					<Text class="customTextMedium" text="{i18n>newHU}"/>
					<Text class="customTextSmall" text="{modelWarehouseTaskNav>/NEWHU}" />
				</FlexBox>

				<FlexBox class="sapUiTinyMargin" justifyContent="SpaceBetween">
					<Text id="scanPickText" width="12rem" class="customTextMedium sapUiTinyMarginTop" text="{i18n>scanPickHU}:"/>
					<!-- <Input submit="onScanPickHuSubmit" id="onScanPick" class="customInput customInputPickHu" /> -->
					<acm:ScanInput id="onScanPick" submit="onScanPickHuSubmit" class="customInput customInputPickHu">
						<acm:attributes>
							<core:CustomData key="inputmode" value="{ELEMENTS>/keyboard/inputmode}" writeToDom="true"/>
						</acm:attributes>
					</acm:ScanInput>
				</FlexBox>
			</VBox>
			<VBox>
				<FlexBox class="sectionSixFlexBox" justifyContent="SpaceBetween">
					<Button enabled="{localModel>/newPickHu}" class="customButton sapUiMediumMarginBottom" press="onNewPickHUPress" text="{i18n>newPickHU}"/>
				</FlexBox>
			</VBox>
		</VBox>


	</VBox>
</core:FragmentDefinition>