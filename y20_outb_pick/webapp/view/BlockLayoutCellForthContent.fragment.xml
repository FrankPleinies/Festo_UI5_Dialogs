<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:acm="y20_outb_pick.controller">
	<VBox justifyContent="Start" height="90%">

		<VBox height="80%" class="sapUiLargeMarginTop">
			<FlexBox class="sapUiTinyMargin sapUiSmallMarginTop" justifyContent="SpaceBetween">
				<Text class="customTextMedium sapUiTinyMarginTop" width="12rem" text="{i18n>scanSrc}"/>
				<!-- <Input submit="onScanSourceSubmit" class="customInput" id="scanInput"/> -->
				<acm:ScanInput id="scanInput" submit="onScanSourceSubmit" class="customInput">
					<acm:attributes>
						<core:CustomData key="inputmode" value="{ELEMENTS>/keyboard/inputmode}" writeToDom="true"/>
					</acm:attributes>
				</acm:ScanInput>
			</FlexBox>

			<FlexBox class="sapUiTinyMargin sapUiSmallMarginTop" width="100%" justifyContent="SpaceBetween">

				<Text class="customTextMedium" text="{i18n>warehouseOrder}" />
				<Text class="customTextSmall sapUiTinyMarginEnd" text="{modelWarehouseTaskNav>/WHO}"/>

			</FlexBox>
			<FlexBox width="100%" class="sapUiTinyMargin" justifyContent="SpaceBetween">

				<Text class="customTextMedium sapUiTinyMarginTop " text="{i18n>warehouseTask}" />
				<Text class="customTextSmall sapUiTinyMarginTop sapUiTinyMarginEnd" text="{modelWarehouseTaskNav>/TANUM}"/>

			</FlexBox>
		</VBox>
		<VBox>
			<FlexBox class="sapUiLargeMarginTop exceptionFlex" id="exceptionFlex" justifyContent="SpaceBetween">
				<Button class="customButton  sapUiMediumMarginBottom" id="exceptonBtn" press="onExceptionPress" text="{i18n>exception}" width="10rem"/>
				<Text class="customTextMedium redTextException " visible="{localModel>/exception}" text="{i18n>exception}"/>
			</FlexBox>
		</VBox>
	</VBox>
</core:FragmentDefinition>