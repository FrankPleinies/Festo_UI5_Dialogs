<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>InfoPopupDialogTitle}" id="popupDialogInfo" class="sapUiContentPadding">


        <Panel>
            <HBox>
                <VBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>productNo}" />
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/MatNr}"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>product}" />
                            <Text class="customTextSmall" text="{  path: 'modelPopupInfoNav>/MatTXT',
								formatter: '.formatter.longTextFormatter'
							 }"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin sapUiTinyMarginTop" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>packUnit}" />
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/PackQty/Quan} {modelPopupInfoNav>/PackQty/Unit}"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>delvUnit}"/>
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/DeliveryQty/Quan} {modelPopupInfoNav>/DeliveryQty/Unit}"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>bulkUnit}" />
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/BulkQty/Quan} {modelPopupInfoNav>/BulkQty/Unit}"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin sapUiTinyMarginTop" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>ptwyCtrlInd}" />
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/PTWYInd}"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>stockRvmInd}" />
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/StockRemoveInd}"/>
                        </items>
                    </FlexBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="SpaceBetween">
                        <items>
                            <Text class="customTextSmall" text="{i18n>Form_HndlCode}" />
                            <Text class="customTextSmall" text="{modelPopupInfoNav>/HndlCode}"/>
                        </items>
                    </FlexBox>
                </VBox>
                <VBox>
                    <FlexBox class="sapUiTinyMargin" width="100%" justifyContent="Center">
                        <items>
                            <Image src="./images/squarebox.jpg" width="10rem" height="10rem"/>
                        </items>
                    </FlexBox>
                </VBox>
            </HBox>
        </Panel>

        <Panel headerText="{i18n>erpText}">
            <TextArea class="customTextSmall" width="100%" editable="false" value="{modelPopupInfoNav>/ItemTXT}"/>
        </Panel>

        <buttons>
            <Button text="{i18n>close}" press="onCloseInfoDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>