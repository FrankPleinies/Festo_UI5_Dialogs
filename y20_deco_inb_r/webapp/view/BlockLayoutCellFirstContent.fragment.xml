<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m">
	<VBox height="auto" justifyContent="SpaceBetween">
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>inboundDelStatus}"/>
				<Text class="customTextLarge" text="{modelDocHeadNav>/Status/StatusValueText}"/>
			</items>
		</FlexBox>
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>trans}"/>
				<Text class="customTextLarge" text="{modelDocHeadNav>/TU/TUNumExt}"/>
			</items>
		</FlexBox>
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>consHu}"/>
				<Text class="customTextLarge" text="{modelDocHeadNav>/HU/HUIdent}"/>
			</items>
		</FlexBox>
		<FlexBox width="auto">
			<VBox width="100%">
				<table:Table id="uiTable" rows="{modelDocItemNav>/results}" selectionMode="Single" selectionBehavior="RowOnly" rowSelectionChange="onRowSelectionChangeUiTable" visibleRowCount="3" itemsenableColumnReordering="false" width="auto" class="sapUiSmallMarginTop">
					<table:columns>
						<table:Column width="3rem">
							<Label class="customTableHeaderSmall" text="{i18n>itemShort}"/>
							<table:template>
								<Text class="customTableRowSmall" text="{modelDocItemNav>ItemNo}"/>
							</table:template>
						</table:Column>
						<table:Column width="4rem">
							<Label class="customTableHeaderSmall" text="{i18n>productShort}"/>
							<table:template>
								<VBox height="20px">
									<Text class="customTableRowSmall" text="{modelDocItemNav>Product/MATNR}"/>
								</VBox>
							</table:template>
						</table:Column>
						<table:Column>
							<Label class="customTableHeaderSmall" text="{i18n>descriptionShort}"/>
							<table:template>
								<VBox height="20px">
									<Text class="customTableRowSmall" text="{modelDocItemNav>ProductTXT}"/>
								</VBox>
							</table:template>
						</table:Column>
						<table:Column>
							<Label class="customTableHeaderSmall" text="{i18n>erpHU}"/>
							<table:template>
								<Text/>
							</table:template>
						</table:Column>
						<table:Column width="5rem">
							<Label class="customTableHeaderSmall" text="{i18n>quanShort}"/>
							<table:template>
								<VBox height="20px">
									<Text class="customTableRowSmall" text="{modelDocItemNav>Quantity/Quan} {modelDocItemNav>Quantity/Unit}"/>
								</VBox>
							</table:template>
						</table:Column>
						<table:Column>
							<Label class="customTableHeaderSmall" text="{i18n>paci}"/>
							<table:template>
								<Text class="customTableRowSmall" text="{modelDocItemNav>PutControl}"/>
							</table:template>
						</table:Column>
					</table:columns>
				</table:Table>
			</VBox>
		</FlexBox>
		<FlexBox class="sapUiMediumMarginTop" justifyContent="SpaceBetween">
			<Text class="customTextSmall sapUiTinyMarginTop" text="{i18n>scan}"/>
			<Input submit="onScanSubmit" class="customInput" id="scanInput"/>
		</FlexBox>
	</VBox>
</core:FragmentDefinition>