<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m">
	<VBox justifyContent="Start" height="auto">
		<!-- "{modelDocItemNav>PackQty/Quan}" -->
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>productNumber}"/>
				<Text class="customTextLarge" text="{modelProductNav>/MatNr}"/>
			</items>
		</FlexBox>
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>product}" width="6rem"/>
				<Text class="customTextLarge" text="{  path: 'modelProductNav>/MatTXT',
								formatter: '.formatter.longTextFormatter'
							 }"/>
			</items>
		</FlexBox>
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>packUnit}"/>
				<Text class="customTextLarge" text="{= ${modelProductNav>/PackQty/Quan}*1} {modelProductNav>/PackQty/Unit}"/>
			</items>
		</FlexBox>
		<FlexBox justifyContent="SpaceBetween">
			<items>
				<Text class="customTextSmall" text="{i18n>bulkUnit}"/>
				<Text class="customTextLarge" text="{= ${modelProductNav>/BulkQty/Quan}*1} {modelProductNav>/BulkQty/Unit}"/>
			</items>
		</FlexBox>
		<FlexBox height="175px" justifyContent="Center">
			<Image src="./images/squarebox.jpg" width="135px" height="135px"/>
		</FlexBox>
	</VBox>
</core:FragmentDefinition>