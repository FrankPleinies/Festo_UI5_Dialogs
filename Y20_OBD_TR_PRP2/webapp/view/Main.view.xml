<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns="sap.m" controllerName="Y20_OBD_TR_PRP2.controller.Main" displayBlock="true">
	<App>
			<pages>
				<Page id="page" title="{i18n>dialog_title}" showFooter="true" enableScrolling="true" 
					class="sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--footer customContentLayout customHeader">
					<headerContent>
								<Text id="user" text="{i18n>header_user}" class="headerUser"/>
								<Image src="img/swllogo.png" width="100px"/>
					</headerContent>
					<content height="70%">
						<l:BlockLayout id="BlockLayout" background="Dashboard" >
							<!-- first row -->
							<l:BlockLayoutRow accentCells="Accent1" >
								<!-- first cell-->
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" id="Accent1" width="1" title="{i18n>Grid1_Title}">
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="Y20_OBD_TR_PRP2.view.Grid1" type="XML"/>
								</l:BlockLayoutCell>
								<!-- second cell-->
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" width="1" title="{i18n>Grid2_Title}">
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="Y20_OBD_TR_PRP2.view.Grid2" type="XML"/>
								</l:BlockLayoutCell>
								<!-- third cell-->
								<l:BlockLayoutCell class="smallPaddingCustom customTopBorder customCellHeader" width="1" title="{i18n>Grid3_Title}">
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="Y20_OBD_TR_PRP2.view.Grid3" type="XML"/>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout>
					</content>
					<footer height="20%">
						<OverflowToolbar height="70px">
							<Button icon="sap-icon://arrow-top" text="Exit" class="customFooterButton"/>
							<HBox width="85%" id="hbox1" justifyContent="Center" alignItems="Stretch" alignContent="Stretch" class="sapUiSmallMarginEnd"/>
							<Button icon="sap-icon://alert" text="{= ${message>/}.length }" visible="true" class="sapUiSmallMarginEnd customFooterButton"
						press="onMessagePopoverPress"/>
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>

	</App>
</mvc:View>