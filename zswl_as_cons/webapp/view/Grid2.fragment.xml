<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form">
	<VBox height="20rem">
		<VBox height="70%">
			<FlexBox justifyContent="Center">
				<StepInput class="customInput sapUiMediumMarginBegin" id="stepInputQuan" change="onQuanChange" enabled="{ELEMENTS>/qty_counted/enabled}" value="{= ${ELEMENTS>/qty_counted/value}*1 }" width="11.15rem"/>
			</FlexBox>
			<FlexBox justifyContent="Begin">
				<items>
					<Text class="customTextSmall " text="{  
									path: 'selectedRow>/TaskCount',
									formatter: '.formatter.showCheckText'}"/>
				</items>
			</FlexBox>
		<FlexBox direction="Column" width="100%" class="sapUiSmallMargin" justifyContent="Center">
			<Button type="Unstyled" width="90%" enabled="{ELEMENTS>/btn_pack/enabled}" visible="{ELEMENTS>/btn_pack/visible}" class="arrowButton" press="onPackPressed" id="btn_pack" text="{ELEMENTS>/btn_pack/text}"/>
		</FlexBox>

			

		</VBox>
				<VBox height="30%">
		<FlexBox justifyContent="End" alignItems="End" class="sapUiMediumMarginTop">
			<items>
				<Button text="{i18n>Btn_HUCreate}" enabled="{ELEMENTS>/btn_hucreate/enabled}" visible="{ELEMENTS>/btn_hucreate/visible}" id="btn_hucreate" press="onPressHUCreate" class="sapUiSmallMargin customButton"/>
				<Button text="{i18n>Btn_HUComplete}" enabled="{ELEMENTS>/btn_hucomplete/enabled}" visible="{ELEMENTS>/btn_hucomplete/visible}" id="btn_hucomplete" press="onPressHUComplete" class="sapUiSmallMargin customButton"/>
				<Button text="{i18n>Btn_Print}" enabled="{ELEMENTS>/btn_print/enabled}" visible="{ELEMENTS>/btn_print/visible}" id="btn_print" press="onPressPrint" class="sapUiSmallMargin customButton"/>
			</items>
		</FlexBox>
		</VBox>

	</VBox>
</core:FragmentDefinition>