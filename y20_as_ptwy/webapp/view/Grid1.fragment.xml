<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table">
	<VBox height="23rem">
	<VBox height="80%">
			<table:Table cellClick="onCellClick" id="uiTable" selectionBehavior="RowOnly" noData="keine Daten" rowActionCount="1" rowSelectionChange="onRowSelectionChangeUiTable" visibleRowCount="5"
				selectionMode="Single" rows="{modelDocItemNav>/results}"  enableColumnReordering="false" width="auto" enableCellFilter="true" sort="sortTable">
				<table:columns >
					<table:Column sortProperty="Product/MATNR">
						<Label text="{i18n>Table_Col2}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{modelDocItemNav>Product/MATNR}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Position" id="col1">
						<Label text="{i18n>Table_Col3}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{modelDocItemNav>Product/MAKTX}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Position" id="col3">
						<Label text="{i18n>Table_Col4}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{modelDocItemNav>Qty/Quan}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Position" id="col4">
						<Label text="{i18n>Table_Col5}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{modelDocItemNav>Qty/Unit}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Position" id="col5">
						<Label text="{i18n>Table_Col6}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{modelDocItemNav>Product/PUTSTRA}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
	</VBox>
			<VBox height="20%">
			<FlexBox justifyContent="SpaceBetween" alignItems="End">
				<items>
					<Text text="{i18n>Form_ScanHU}" wrapping="false" class="customTextSmall sapUiTinyMarginTop"/>
					<Input value="" id="scanInput" submit="onScanSubmit" class="customInput"/>
				</items>
			</FlexBox>
		</VBox>

		</VBox>
</core:FragmentDefinition>