<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form">
	<VBox height="23rem">
		<VBox height="75%">
			<FlexBox justifyContent="Center">
				<StepInput class="customInput sapUiMediumMarginBegin" id="stepInputQuan" change="onQuanChange" enabled="{ELEMENTS>/qty_counted/enabled}" min="0" max="{= ${selectedRow>/Qty/Quan}*1 }" value="{= ${ELEMENTS>/qty_counted/value}*1 }" width="11.15rem"/>
			</FlexBox>
			<FlexBox justifyContent="Begin">
				<items>
					<Text class="customTextSmall " text="{  
									path: 'selectedRow>/TaskCount',
									formatter: '.formatter.showCheckText'}"/>
				</items>
			</FlexBox>
		<FlexBox direction="Column" width="100%" class="sapUiSmallMargin" justifyContent="Center">
			<Button type="Unstyled" width="90%" enabled="{ELEMENTS>/btn_pack/enabled}" visible="{ELEMENTS>/btn_pack/visible}" class="arrowButton" press="onPackPressed" id="btn_pack" text="{ELEMENTS>/btn_pack/text}"/>
		</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<Text class="customTextSmall" text="{i18n>Form_HndlCode}"/>
				<Text class="customTextLarge" text="{selectedRow>/Product/HndlCode}"/>
			</FlexBox>
		</VBox>
		<VBox height="25%">
		<FlexBox justifyContent="End" alignItems="End" class="sapUiMediumMarginTop">
			<items>
				<Button text="{i18n>BtnWeight}"  enabled="{ELEMENTS>/btn_weight/enabled}" visible="{ELEMENTS>/btn_weight/visible}"   id="btn_weight"  press="onOpenWeightDialog" class="sapUiSmallMargin customButton"  width="7rem"/>
			</items>
		</FlexBox>
		</VBox>
	</VBox>
</core:FragmentDefinition>