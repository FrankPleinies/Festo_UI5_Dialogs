<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<VBox height="17rem">
		<VBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Prod_No}" class="customTextSmall"/>
					<Text text="{selectedRow>/Product/MATNR}" class="customTextLarge"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Prod_Text}" wrapping="false" class="customTextSmall"/>
					<Text text="{  path: 'selectedRow>/Product/MAKTX',
								formatter: '.formatter.longTextFormatter'
							 }" wrapping="false" class="customTextMedium"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text class="customTextSmall" text="{i18n>Form_Prod_PackUnit}"/>
					<Text class="customTextLarge" text="{= ${selectedRow>/Product/PackQty/Quan}*1} {selectedRow>/Product/PackQty/Unit}"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text class="customTextSmall" text="{i18n>Form_Prod_BulkUnit}"/>
					<Text class="customTextLarge" text="{= ${selectedRow>/Product/BulkQty/Quan}*1} {selectedRow>/Product/BulkQty/Unit}"/>
				</items>
			</FlexBox>

		</VBox>
	</VBox>

</core:FragmentDefinition>