<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Empty AS Bin" id="popupDialogEmptyBinCheck" class="sapUiSizeCozy sapUiContentPadding" afterOpen="afterOpenEmptyBinCheck">

        <f:Form width="35rem" id="dialogEmptyBinCheckForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="Confirm Empty AS Bin" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <Panel width="auto" class="customListBorder">
                                <content>
                                    <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
                                        <Button text="Yes: Empty" id="emptyBinCheckConfirmButton" press="onEmptyBinCheckConfirmPressed"/>
                                        <Button text="No" id="emptyBinCheckNoButton" press="onEmptyBinCheckNoPressed"/>
                                    </HBox>
                                </content>
                            </Panel>
                        </f:FormElement>
                    </f:formElements>

                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</core:FragmentDefinition>