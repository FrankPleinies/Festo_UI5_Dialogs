<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m">
	<VBox justifyContent="Start" height="auto">
		<VBox>
			<FlexBox class="sapUiTinyMarginTop" justifyContent="SpaceBetween">
				<Text class="customTextSmall" text="{i18n>ScanPackHuType}"/>
				<!-- <Input class="customInput" id="scanPackHUType" submit="onPrintPressed" value="{modelNewPackNav>/HUType}"/>    -->
				 <ComboBox class="customInput" id="scanPackHUType" change="onPrintPressed" width="23.35rem"
					showSecondaryValues= "true"
					items="{
						path: 'modelHUTypesNav>/results',
						sorter: { path: 'modelHUTypesNav>HUType' }
					}">
					<core:ListItem key="{modelHUTypesNav>HUType}" text="{modelHUTypesNav>HUType}" additionalText = "{modelHUTypesNav>Description}" />
				</ComboBox> 

			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<Text class="customTextSmall" text="{i18n>selectedHU}"/>
				<Input class="customInput" enabled="false" value="{modelNewPackNav>/LastHUType}"/>
			</FlexBox>
		</VBox>
		<FlexBox height="12rem" justifyContent="Center"/>
		<FlexBox width="100%" justifyContent="SpaceBetween">

			<Button class="customButton" id="btnPrint" press="onPrintPressed" width="7rem" text="{i18n>print}"/>
			<Button class="customButton" press="onOpenWeightDialog" width="7rem" text="{i18n>weight}"/>

			<Button class="customButton" width="7rem" text="{i18n>info}" press="onInfoPressed"/>
		</FlexBox>

	</VBox>
</core:FragmentDefinition>