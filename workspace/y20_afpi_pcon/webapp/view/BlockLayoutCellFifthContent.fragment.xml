<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:acm="y20_outb_afpi_pcon.controller">
	<VBox height="20rem" justifyContent="SpaceBetween">

		<VBox height="45%" justifyContent="SpaceBetween">
			<Text text=" "/>
		</VBox>
		<VBox height="25%" justifyContent="SpaceBetween">
			<FlexBox class="sapUiTinyMargin sapUiMediumMarginTop" justifyContent="SpaceBetween">
				<Text class="sapUiTinyMarginTop customTextSmall" text="{i18n>mainScreenFieldScanDestination}"/>
				<!-- <Input submit="onScanDestinationSubmit" class="customInput" id="scanDestination"/> -->
				<acm:ScanInput id="scanDestination" submit="onScanDestinationSubmit" class="customInput">
					<acm:attributes>
						<core:CustomData key="inputmode" value="{ELEMENTS>/keyboard/inputmode}" writeToDom="true"/>
					</acm:attributes>
				</acm:ScanInput>
			</FlexBox>
		</VBox>
		<VBox height="30%" justifyContent="SpaceBetween">
			<FlexBox class="sapUiTinyMargin sapUiMediumMarginTop" justifyContent="SpaceBetween">
				<Button id="btnChgDst" class="customButton" press="onChgDstPressed" text="{i18n>mainScreenBtnChgDst}" width="7rem"/>
			</FlexBox>
		</VBox>
	</VBox>
</core:FragmentDefinition>