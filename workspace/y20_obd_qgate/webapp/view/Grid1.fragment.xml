<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table">
	<VBox height="20rem">
			<table:Table cellClick="onCellClick" id="tblDeliveryContent" selectionBehavior="RowOnly" noData="keine Daten" rowActionCount="1" rowSelectionChange="onSelect" visibleRowCount="5"
				selectionMode="Single" rows="{uiTableModel>/items}"  enableColumnReordering="false" width="auto" enableCellFilter="true" sort="sortTable">
				<table:columns >
					<table:Column sortProperty="Position" id="col1">
						<Label text="{i18n>Table_Col1}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Itemno}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Product/MATNR">
						<Label text="{i18n>Table_Col2}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Product/MATNR}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="TaskCount">
						<Label text="{i18n>Table_Col3}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>TaskCount}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
	</VBox>
</core:FragmentDefinition>