<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">

	<VBox height="88%" justifyContent="SpaceBetween">
		<FlexBox justifyContent="SpaceBetween">
			<Text class="sapUiTinyMarginBegin sapUiTinyMarginTop customTextMedium" text="{i18n>quantity}"/>
			<StepInput class="customInput" id="stepInputQuan" change="onQuanChange" value="{modelToNav>/QUAN/QUAN}" min="0" width="11.15rem"/>
		</FlexBox>
		<FlexBox direction="Column" width="100%" class="sapUiSmallMargin" justifyContent="Center">
			<Button type="Unstyled" width="90%" class="arrowButton" id="arrowButton" text="{modelToNav>/QUAN/QUAN}"/>
		</FlexBox>
		<FlexBox class="sapUiSmallMargin" alignItems="Center" justifyContent="SpaceBetween">
			<Button class="customButton sapUiMediumMarginBottom" width="10rem" text="{i18n>print}"/>
			<Text class="customTextMedium sapUiLargeMarginBegin redText " id="redTextLabel" text=""/>
		</FlexBox>

	</VBox>
</core:FragmentDefinition>