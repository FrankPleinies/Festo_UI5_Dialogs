<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns="sap.m" displayBlock="true">
	<Dialog title="Chain Trolleys" id="chainDialog" class="sapUiContentPadding">
						<l:BlockLayout id="ChainLayout" background="Dashboard">
							<l:BlockLayoutRow accentCells="Accent2">
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" id="Accent2" width="1" title="Scan Trolley">
                                    <FlexBox justifyContent="Start" >
                                        <items>
                                            <Input id="if_scanTrolley" value="123456" class="sapUiSmallMarginBottom customInput" submit="onScanTrolley"/>
                                        </items>
                                    </FlexBox>
									<FlexBox justifyContent="Center">
										<items>
											<table:Table cellClick="onCellClick" id="tblTrolleyChainContent" noData="keine Daten" visibleRowCount="5"
												selectionMode="Single" rows="{chainTableModel>/items}"  enableColumnReordering="false" width="50%" enableCellFilter="true">
												<table:columns>
													<table:Column>
														<Label text="{i18n>ChainTable_Col1}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainTableModel>Trolley}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>ChainTable_Col2}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainTableModel>HUCount}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>ChainTable_Col3}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainTableModel>HUCount}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>ChainTable_Col4}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainTableModel>HUCount}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
												</table:columns>
											</table:Table>

										</items>
									</FlexBox>
									<FlexBox justifyContent="Start" alignItems="End" >
										<items>
											<Button text="Chain" press="onScanTrolley" class="sapUiSmallMargin customButton" />
											<Button text="Clear" press="onClearTrolleysDialog" class="sapUiSmallMargin customButton" />
											<Button text="Start" press="onCloseChainDialog" class="sapUiSmallMargin customButton" />
										</items>
									</FlexBox>

								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout> 
		<buttons>
        </buttons>

	</Dialog>
</core:FragmentDefinition>


