<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form">
	<!--<grid:CSSGrid xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:grid="sap.ui.layout.cssgrid" id="innergrid2" class="innergrid">-->
	<!--	<grid:items>-->
	<VBox height="45rem">
		<VBox height="20%">
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_AArea}" class="customTextLarge"/>
					<Text text="{Troll>/ScanTrolley_TrolleyNav/ActivArea}" class="customTextLarge"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Trolley}" class="customTextLarge"/>
					<Text text="{Troll>/ScanTrolley_TrolleyNav/Trolley}" class="customTextLarge"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Cons}" class="customTextMedium"/>
					<Text text="{Troll>/ScanTrolley_TrolleyNav/PickCons}"  class="customTextSmall"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Pool}" class="customTextMedium"/>
					<Text text="{Troll>/ScanTrolley_TrolleyNav/PoolMix}"  class="customTextSmall"/>
				</items>
			</FlexBox>
		</VBox>
		<VBox height="40%">
			<FlexBox class="sapUiMediumMarginTop" justifyContent="SpaceAround" alignItems="Center" alignContent="Center">
				<items>
					<Image src="img/{ELEMENTS>/img_trolley/path}" width="400px"/>
				</items>
			</FlexBox>
		</VBox>
		<VBox height="25%">
			<FlexBox class="sapUiMediumMarginTop" justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_ScanPos}" class="sapUiSmallMarginTop customTextMedium"/>
					<Input value="" id="scanPos" submit="onScanTrolley" width="100%" class="customInput"/>
				</items>
			</FlexBox>
		</VBox>
		<VBox height="15%" wrap="Wrap">
			<FlexBox justifyContent="SpaceBetween" alignItems="End" class="sapUiMediumMarginTop" wrap="Wrap" >
				<items>
					<Button text="{i18n>BtnCloseTrolley}" enabled="{ELEMENTS>/btn_closeTrolley/enabled}" visible="{ELEMENTS>/btn_closeTrolley/visible}" class="sapUiSmallMarginTop customButton"
						id="btn_closeTrolley" press="onCloseTrolley">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Button>
					<Button text="{i18n>BtnCloseAllTrolley}" enabled="{ELEMENTS>/btn_closeAllTrolley/enabled}" visible="{ELEMENTS>/btn_closeAllTrolley/visible}" class="sapUiSmallMarginTop customButton"
						id="btn_closeAllTrolley" press="onCloseAllTrolley">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Button>
				</items>
			</FlexBox>
		</VBox>
	</VBox>
	<!--	</grid:items>-->
	<!--</grid:CSSGrid>-->
</core:FragmentDefinition>