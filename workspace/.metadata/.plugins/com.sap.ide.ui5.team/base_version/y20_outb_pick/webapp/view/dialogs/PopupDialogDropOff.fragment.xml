<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>pickComplete}" id="popupDialogDropOff" class="sapUiSizeCozy sapUiContentPadding" afterOpen="afterOpenDropOff">

        <f:Form id="dialogDropOffForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="{i18n>pickingCompleted}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <List class="sapUiMediumMarginBottom customListBorder" showSeparators="None">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="{i18n>resource}"/>
                                            <ToolbarSpacer />
                                            <Title text="{modelDropOff>/Trolley}"/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <items>
                                    <StandardListItem title="{i18n>destination}" info="{modelDropOff>/Nltyp}" />
                                    <StandardListItem title="{i18n>storageSection}" info="{modelDropOff>/Nlber}"/>
                                    <StandardListItem title="{i18n>storageBin}" info="{modelDropOff>/Nlpla}"/>
                                </items>
                            </List>
                        </f:FormElement>
                        <f:FormElement>
                            <List class="customListBorder" showSeparators="None">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="{i18n>scanDest}"/>
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <items>
                                    <InputListItem>
                                        <Input id="scanPopupDropOffInput" submit="onConfirmDropOffDialog"/>
                                    </InputListItem>
                                    <InputListItem/>
                                    <InputListItem/>
                                </items>
                            </List>
                        </f:FormElement>
                    </f:formElements>

                </f:FormContainer>
            </f:formContainers>
        </f:Form>

        <buttons>
            <Button text="{i18n>confirm}" press="onConfirmDropOffDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>