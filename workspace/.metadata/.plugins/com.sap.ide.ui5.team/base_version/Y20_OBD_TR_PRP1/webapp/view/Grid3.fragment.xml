<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns="sap.m" displayBlock="true">
	<VBox height="15rem">
											<table:Table cellClick="onCellClick" id="tblHU" noData="keine Daten" visibleRowCount="3"
												selectionMode="Single" selectionBehavior="RowOnly" rows="{huTableModel>/items}"  enableColumnReordering="false" enableCellFilter="true">
												<table:columns>
													<table:Column>
														<Label text="{i18n>HUTable_Col1}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{huTableModel>SeqNo}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>HUTable_Col2}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{huTableModel>HUIdent}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>HUTable_Col3}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{huTableModel>HUType}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
												</table:columns>
											</table:Table>

	</VBox>

</core:FragmentDefinition>