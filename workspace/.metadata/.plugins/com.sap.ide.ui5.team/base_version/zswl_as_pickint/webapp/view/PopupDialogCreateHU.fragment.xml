<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Scan HU Type" id="popupDialogCreateHU" class="sapUiSizeCozy sapUiContentPadding" afterOpen="afterOpenCreateHU">

        <f:Form width="35rem" id="dialogCreateHUForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="Scan HU Type" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <Panel width="auto" class="customListBorder">
                                <content>
                                    <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
                                        <Input value="" id="scanHUType" submit="onScanHUType" class="customInput"/>
                                        <Button text="Close" id="createHUCloseButton" press="onCreateHUClosePressed"/>
                                    </HBox>
                                </content>
                            </Panel>
                        </f:FormElement>
                    </f:formElements>

                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</core:FragmentDefinition>