<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>pickTrolley}" id="popupDialogScan" class="sapUiSizeCozy sapUiContentPadding" afterOpen="onAfterOpenScanDialog">

        <f:Form id="dialogScanForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="{i18n>startPicking}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>

                        <f:FormElement label="{i18n>resourceID}">
                            <f:fields>
                                <Input id="formScanInput" liveChange="onInputResourceChange"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>specialPick}">
                            <f:fields>
                                <RadioButtonGroup select="onRadioButtonGroupFirstSelect" id="rbgFirst" columns="1">
                                    <RadioButton id="rbgFirst-1" text="{i18n>noUseResource}" />
                                    <RadioButton id="rbgFirst-2" text="{i18n>yes}" />
                                </RadioButtonGroup>
                            </f:fields>
                        </f:FormElement>

                        <f:FormElement label="{i18n>pickAA}">
                            <f:fields>
                                <Input id="formPickAAInput"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>consolidation}">
                            <f:fields>
                                <RadioButtonGroup id="rbgSecond" columns="1">
                                    <RadioButton id="rbgSecond-1" text="{i18n>autoAssign}" />
                                    <RadioButton id="rbgSecond-2" text="{i18n>onlyCons}" />
                                    <RadioButton id="rbgSecond-3" text="{i18n>onlyNoCons}" />
                                    <RadioButton id="rbgSecond-4" text="{i18n>anyCons}" />
                                </RadioButtonGroup>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>poolMix}">
                            <f:fields>
                                <RadioButtonGroup id="rbgThird" columns="1">
                                    <RadioButton id="rbgThird-1" text="{i18n>mix}" />
                                    <RadioButton id="rbgThird-2" text="{i18n>singlePool}" />
                                </RadioButtonGroup>
                            </f:fields>
                        </f:FormElement>

                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>

        <buttons>
            <Button text="{i18n>confirm}" id="confirmSubmitButton" press="onConfirmDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>