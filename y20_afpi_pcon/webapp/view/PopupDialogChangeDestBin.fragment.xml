<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>chgDestBinDialogTitle}" id="popupDialogChgDestBin" class="sapUiSizeCozy sapUiContentPadding">

        <f:Form id="dialogChgDestBinForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="{i18n>chgDestBinDialogText}" />
            </f:title>
            <f:layout>
			<f:ResponsiveGridLayout 
				labelSpanXL="3"	labelSpanL="3" labelSpanM="3" labelSpanS="12" 
				adjustLabelSpan="false"
				emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
				columnsXL="1" columnsL="1" columnsM="1"
				singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>chgDestBinDialogLabel}">
                            <f:fields>
                                <Input id="formChgDestBinInput"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
	    
        <buttons>
            <Button press="onConfirmChgDestBinDialog" text="{i18n>chgDestBinDialogBtnConfirm}" width="7rem"/>
            <Button press="onCloseChgDestBinDialog" text="{i18n>chgDestBinDialogBtnCancel}" width="7rem"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>