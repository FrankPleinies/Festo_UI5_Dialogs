<mvc:View
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	controllerName="y20_outb_afpi_pcon.controller.MainScreen"
	displayBlock="true">

	<App id="app">
		<pages>
			<Page id="page" title="{i18n>mainScreenTitle}" showFooter="true"
				class="sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--footer customContentLayout customHeader">
				<headerContent>
					<FlexBox height="100%" alignItems="Center">
						<Text id="headerContentText" text="{i18n>header_user}" class="headerUser"/>
						<Image src="./images/festologo.png" width="100px"/>
					</FlexBox>
				</headerContent>
				<content>
					<l:BlockLayout id="BlockLayout" background="Dashboard">
						<!-- first row -->
						<l:BlockLayoutRow class="customHeightRowHigher" accentCells="Accent1">
							<!-- first cell-->
							<l:BlockLayoutCell class="smallPaddingCustom customTopBorder customCellHeader" id="blockLayoutCellFirst" width="1">
								<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_outb_afpi_pcon.view.BlockLayoutCellFirstContent" type="XML"/>
							</l:BlockLayoutCell>
							<!-- second cell-->
							<l:BlockLayoutCell class="smallPaddingCustom customTopBorder customCellHeader" id="blockLayoutCellSecond">
								<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_outb_afpi_pcon.view.BlockLayoutCellSecondContent" type="XML"/>
							</l:BlockLayoutCell>
							<!-- third cell-->
							<l:BlockLayoutCell class="smallPaddingCustom customTopBorder customCellHeader" id="blockLayoutCellThird">
								<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_outb_afpi_pcon.view.BlockLayoutCellThirdContent" type="XML"/>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<!-- second row -->
						<l:BlockLayoutRow class="customHeightRowLower">
							<!-- forth cell-->
							<l:BlockLayoutCell class="smallPaddingCustom customButtomBorder customCellHeader">
								<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_outb_afpi_pcon.view.BlockLayoutCellForthContent" type="XML"/>
							</l:BlockLayoutCell>
							<!-- fifth cell-->
							<l:BlockLayoutCell class="smallPaddingCustom customButtomBorder customCellHeader">
								<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_outb_afpi_pcon.view.BlockLayoutCellFifthContent" type="XML"/>
							</l:BlockLayoutCell>
							<!-- sixth cell-->
							<l:BlockLayoutCell class="smallPaddingCustom customTopBorder customCellHeader">
								<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_outb_afpi_pcon.view.BlockLayoutCellSixthContent" type="XML"/>
							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
						<!-- third row -->

					</l:BlockLayout>
				</content>
				<footer height="20%">
					<OverflowToolbar height="70px">
						<Button icon="sap-icon://arrow-top" text="{i18n>exit}" press="onExitPressed" class="customFooterButton"/>
						<ToggleButton id="btn_keyboard2" pressed="{ELEMENTS>/btn_keyboard/pressed}" icon="sap-icon://keyboard-and-mouse" press="onShowKeyboard" class="customFooterButton" />
						<HBox width="85%" id="hbox1" justifyContent="Center" alignItems="Stretch" alignContent="Stretch" class="sapUiSmallMarginEnd"/>
						<Button icon="sap-icon://alert" text="{= ${message>/}.length }" visible="true" class="sapUiSmallMarginEnd customFooterButton" press="onMessagePopoverPress"/>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>

</mvc:View>