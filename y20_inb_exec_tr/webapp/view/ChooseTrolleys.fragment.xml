<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:acm="y20_inb_exec_tr.controller" displayBlock="true">
	<Dialog title="{i18n>ChainPopupDialogTitle}" id="chainDialog" class="sapUiContentPadding">
	<MessageStrip class="sapUiTinyMarginBottom sapUiSmallMarginBegin" text="{i18n>chain_Dialog_Message}" type="Information" showIcon="true"></MessageStrip>
						<l:BlockLayout id="ChainLayout" background="Dashboard">
							<l:BlockLayoutRow accentCells="Accent2">
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" id="Accent2" width="1" title="{i18n>ChainPopupHeaderScanTrol}">
                                    <FlexBox justifyContent="Start" >
                                        <items>
                                            <!-- <Input id="if_scanTrolley" value="" class="sapUiSmallMarginBottom customInput" submit="onScanTrolley"/> -->
											<acm:ScanInput id="if_scanTrolley" submit="onScanTrolley" class="sapUiSmallMarginBottom customInput">
												<acm:attributes>
													<core:CustomData key="inputmode" value="{ELEMENTS>/keyboard/inputmode}" writeToDom="true"/>
												</acm:attributes>
											</acm:ScanInput>
                                        </items>
                                    </FlexBox>
									<FlexBox justifyContent="Center">
										<items>
											<table:Table cellClick="onCellClick" id="tblTrolleyChainContent" visibleRowCount="5"
												selectionMode="Single" rows="{chainedTableModel>/items}"  enableColumnReordering="false" width="100%" enableCellFilter="true">
												<table:columns>
													<table:Column>
														<Label text="{i18n>ChainTable_Col1}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainedTableModel>Seqno}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>ChainTable_Col2}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainedTableModel>Trolley}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>ChainTable_Col3}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainedTableModel>Aarea}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
													<table:Column>
														<Label text="{i18n>ChainTable_Col4}" class="customTableHeaderSmall"/>
														<table:template>
															<Text text="{chainedTableModel>CountHu}" wrapping="false" class="customTableRowSmall"/>
														</table:template>
													</table:Column>
												</table:columns>
											</table:Table>

										</items>
									</FlexBox>
									<FlexBox justifyContent="Start" alignItems="End" >
										<items>
											<Button text="{i18n>chain}" press="onScanTrolley" class="sapUiSmallMargin customButton" />
											<Button text="{i18n>clear}" press="onClearTrolleys" class="sapUiSmallMargin customButton" />
											<Button text="{i18n>start}" press="onStart" class="sapUiSmallMargin customButton" />
											<ToggleButton id="btn_keyboard" pressed="{ELEMENTS>/btn_keyboard/pressed}" icon="sap-icon://keyboard-and-mouse" press="onShowKeyboard" class="sapUiSmallMargin" />

										</items>
									</FlexBox>

								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout> 
		<buttons>
        </buttons>

	</Dialog>
</core:FragmentDefinition>


