<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<VBox height="17rem">
		<VBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Prod_No}" class="customTextSmall"/>
					<Text text="{selectedRow>/Product/MATNR}" class="customTextLarge"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Prod_Text}" wrapping="false" class="customTextSmall"/>
					<Text text="{selectedRow>/Product/MAKTX}" wrapping="false" class="customTextMedium"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Qty}" wrapping="false" class="customTextSmall"/>
					<Text text="{= ${selectedRow>/Qty/Quan}*1} {selectedRow>/Qty/Unit}" wrapping="false" class="customTextMedium"/>
				</items>
			</FlexBox>
			<FlexBox height="175px" justifyContent="Center">
					<Image src="./img/vfb_logo.jpg" width="135px" height="135px"/>
			</FlexBox>

		</VBox>
	</VBox>

</core:FragmentDefinition>