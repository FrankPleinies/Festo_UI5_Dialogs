<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="Low Stock Check" id="popupDialogLowStockCheck" class="sapUiSizeCozy sapUiContentPadding" afterOpen="afterOpenLowStockCheck">

        <f:Form width="35rem" id="dialogLowStockCheckForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="Confirm Low Stock in AS Compartment" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <List class="sapUiMediumMarginBottom customListBorder" showSeparators="None">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="Confirmation Data"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <items>
                                    <StandardListItem title="Product" info="1893" />
                                    <StandardListItem title="Description" info="Meisterschale"
                                        tooltip="{modelLowStock>/Maktx}"/>
                                </items>
                            </List>
                        </f:FormElement>
                        <f:FormElement>
                            <Panel width="auto" class="customListBorder">
                                <OverflowToolbar>
                                    <Title class="customTextSmaller" text="Quantity"/>
                                </OverflowToolbar>
                                <content>

                                    <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
                                        <StepInput id="stepInputLowStockCheck" value="{modelLowStock>/Qty}" change="onLowStockCheckStepChangedPressed" min="0"/>
                                        <Button text="Confirm Qty" id="lowStockCheckAdjustButton" press="onLowStockCheckAdjustPressed"/>
                                    </HBox>
                                </content>
                            </Panel>
                        </f:FormElement>
                    </f:formElements>

                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</core:FragmentDefinition>