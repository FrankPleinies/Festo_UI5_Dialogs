<core:FragmentDefinition
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout" 
	xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" 
	xmlns="sap.m"
	xmlns:acm="y20_outb_pcon.controller">
	<VBox height="45rem" justifyContent="SpaceBetween">
		<VBox height="40%" justifyContent="SpaceBetween">
		  	<HBox width="100%" justifyContent="SpaceBetween" alignItems="Stretch" alignContent="Stretch" class="customInnerCellHeaderBox">
		  		<Text class="customInnerCellHeaderText" text="{i18n>mainScreenFirstCellTitle}"/>
		  		<Text class="customInnerCellHeaderText" id="storageBinTitle" text=""/>
		  	</HBox>
		</VBox>
	  	<VBox height="60%" justifyContent="SpaceBetween">
			<FlexBox class="sapUiMediumMarginTop" justifyContent="SpaceBetween">
				<Text class="customTextSmall sapUiTinyMargin" text="{i18n>mainScreenFieldScan}"/>
				<!-- <Input submit="onScanSourceSubmit" class="customInput" id="scanSource"/> -->
				<acm:ScanInput id="scanSource" submit="onScanSourceSubmit" class="customInput">
					<acm:attributes>
						<core:CustomData key="inputmode" value="{ELEMENTS>/keyboard/inputmode}" writeToDom="true"/>
					</acm:attributes>
				</acm:ScanInput>
			</FlexBox>	
		  	<HBox height="5px" width="100%" class="customInnerCellSeparator">
		  		<Text text=" "/>
		  	</HBox>	  	
		  	<HBox width="100%" justifyContent="SpaceBetween" alignItems="Stretch" alignContent="Stretch" class="customInnerCellHeaderBox">
		  		<Text class="customInnerCellHeaderText" text="{i18n>mainScreenFifthCellTitle}"/>
		  	</HBox>	
			<FlexBox alignItems="Start" justifyContent="Start">
				<table:Table id="uiTableBinContent" 
					rows="{modelBinContent>/results}" 
					selectionMode="None"
					visibleRowCount="5" 
					enableColumnReordering="false" 
					width="auto" 
					class="sapUiSmallMarginTop">
					<table:columns>
						<table:Column
							sortProperty="Pos">
							<Label text="{i18n>tableBinContent_Col1}"/>
							<table:template>
								<Text text="{modelBinContent>Pos}" />
							</table:template>
						</table:Column>
						<table:Column
							sortProperty="Pickhu">
							<Label text="{i18n>tableBinContent_Col2}"/>
							<table:template>
								<Text text="{modelBinContent>Pickhu}" />
							</table:template>
						</table:Column>
						<table:Column
							sortProperty="Poolname">
							<Label text="{i18n>tableBinContent_Col3}"/>
							<table:template>
								<Text text="{modelBinContent>Poolname}" />
							</table:template>
						</table:Column>
						<table:Column
							sortProperty="Product">
							<Label text="{i18n>tableBinContent_Col4}"/>
							<table:template>
								<Text text="{modelBinContent>Product}" />
							</table:template>
						</table:Column>					
					</table:columns>
				</table:Table>
			</FlexBox>		  	
		</VBox>				
	</VBox>
</core:FragmentDefinition>
