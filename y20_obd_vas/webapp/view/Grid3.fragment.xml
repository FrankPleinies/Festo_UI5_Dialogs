<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table">
	<VBox height="20rem">
			<table:Table cellClick="onCellClick" id="tblDeliveryHUContent" selectionBehavior="RowOnly" noData="keine Daten" rowActionCount="1" rowSelectionChange="onSelect" visibleRowCount="10"
				selectionMode="Single" rows="{uiTableModelHU>/items}"  enableColumnReordering="false" width="auto" enableCellFilter="true" sort="sortTable">
				<table:columns >
					<table:Column >
						<Label text="{i18n>Table2_Col1}" class="customTableHeaderSmall"/>
						<table:template class="customTableRowBackgroundOK">
							<Text text="{uiTableModelHU>HUIdent}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column>
						<Label text="{i18n>Table2_Col2}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModelHU>HUType}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
	</VBox>

</core:FragmentDefinition>