<mvc:View controllerName="y20_obd_vas.controller.Main" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:table="sap.ui.table"
	xmlns:form="sap.ui.layout.form" xmlns="sap.m" displayBlock="true">
	<!-- <Shell id="shell"> -->
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>dialog_title}" showFooter="true"
					class="sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--footer customContentLayout customHeader">
					<headerContent>
						<Text id="user" text="{i18n>header_user}" class="headerUser"/>
						<Image src="./img/swllogo.png" width="100px"/>
					</headerContent>
					<content>
						<l:BlockLayout id="BlockLayout" background="Dashboard">
							<!-- first row -->
							<l:BlockLayoutRow accentCells="Accent1">
								<!-- first cell-->
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" id="Cell1" width="1" title="{i18n>Grid1_Title}">
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_obd_vas.view.Grid1" type="XML"/>
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_obd_vas.view.Grid4" type="XML"/>
								</l:BlockLayoutCell>
								<!-- second cell-->
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" title="{i18n>Grid2_Title}">
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_obd_vas.view.Grid2" type="XML"/>
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_obd_vas.view.Grid5" type="XML"/>
								</l:BlockLayoutCell>
								<!-- third cell-->
								<l:BlockLayoutCell class="smallPaddingCustom customCellHeader" id="Cell3" title="{i18n>Grid3_Title}">
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_obd_vas.view.Grid3" type="XML"/>
									<core:Fragment xmlns:core="sap.ui.core" fragmentName="y20_obd_vas.view.Grid6" type="XML"/>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<!-- second row -->
						</l:BlockLayout>

					</content>
					<footer>
						<OverflowToolbar height="70px">
							<Button icon="sap-icon://arrow-top" text="Exit" class="customFooterButton"/>
							<HBox width="80%" id="hbox1" justifyContent="Center" alignItems="Stretch" alignContent="Stretch" class="sapUiSmallMarginEnd"/>
							<Button icon="sap-icon://alert" text="{= ${message>/}.length }" visible="true" class="sapUiSmallMarginEnd customFooterButton"
								press="onMessagePopoverPress"/>
						</OverflowToolbar>
					</footer>

				</Page>
			</pages>
		</App>
	<!-- </Shell> -->
</mvc:View>