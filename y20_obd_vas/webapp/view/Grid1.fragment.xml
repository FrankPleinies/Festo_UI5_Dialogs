<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table">
	<VBox height="20rem">
		<VBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_OBD_Status}" class="customTextSmall sapUiTinyMarginTop"/>
					<Text text="{  path: 'DlvHeader>/DlvStatus',
									formatter: '.formatter.setStatus'}" class="customTextLarge"/>
				</items>
			</FlexBox>
			<FlexBox justifyContent="SpaceBetween">
				<items>
					<Text text="{i18n>Form_Delivery}" wrapping="false" class="customTextSmall sapUiTinyMarginTop"/>
					<Text text="{DlvHeader>/DocNo}" wrapping="false" class="customTextLarge"/>
				</items>
			</FlexBox>
		</VBox>
		<VBox>
			<table:Table cellClick="onCellClick" id="tblDeliveryContent" selectionBehavior="RowOnly" noData="keine Daten" rowActionCount="1" rowSelectionChange="onSelect" visibleRowCount="7"
				selectionMode="Single" rows="{uiTableModel>/items}"  enableColumnReordering="false" width="auto" enableCellFilter="true" sort="sortTable">
					<table:rowSettingsTemplate>
						<table:RowSettings highlight="{  
									path: 'uiTableModel>Confirmed',
									formatter: '.formatter.setHighlight'}" />
					</table:rowSettingsTemplate>
				<table:columns >
					<table:Column sortProperty="Position" id="col1">
						<Label text="{i18n>Table_Col1}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Itemno}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Product/MATNR">
						<Label text="{i18n>Table_Col2}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Product/MATNR}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column>
						<Label text="{i18n>Table_Col3}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Product/MAKTX}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>Table_Col5}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Qty/Quan} {uiTableModel>Qty/Unit}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>Table_Col6}" class="customTableHeaderSmall"/>
						<table:template>
							<Text text="{uiTableModel>Vas}" wrapping="false" class="customTableRowSmall"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
		</VBox>
	</VBox>
</core:FragmentDefinition>