<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form">
	<VBox height="23rem">
		<VBox height="75%">
			<FlexBox justifyContent="Center">
				<StepInput class="customInput sapUiMediumMarginBegin" id="stepInputQuan" change="onQuanChange" value="{= ${ELEMENTS>/qty_counted/value}*1 }" width="11.15rem"/>
			</FlexBox>
			<FlexBox justifyContent="Begin">
				<items>
					<Text class="customTextSmall " text="{  
									path: 'selectedRow>/TaskCount',
									formatter: '.formatter.showCheckText'}"/>
				</items>
			</FlexBox>
		<FlexBox direction="Column" width="100%" class="sapUiSmallMargin" justifyContent="Center">
			<Button type="Unstyled" width="90%" enabled="{ELEMENTS>/btn_count/enabled}" visible="{ELEMENTS>/btn_count/visible}" class="arrowButton" press="onPressCounting" id="btn_count" text="{ELEMENTS>/btn_count/text}"/>
		</FlexBox>

			

		</VBox>
	</VBox>
</core:FragmentDefinition>