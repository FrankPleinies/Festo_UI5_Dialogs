<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>lowStockCheck}" id="popupDialogLowStockCheck" class="sapUiSizeCozy sapUiContentPadding" afterOpen="afterOpenLowStockCheck">

        <f:Form width="35rem" id="dialogLowStockCheckForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="{i18n>confirmLowStock}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <List class="sapUiMediumMarginBottom customListBorder" showSeparators="None">
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <content>
                                            <Title text="{118n>confirmationData}"/>
                                            <ToolbarSpacer />
                                        </content>
                                    </OverflowToolbar>
                                </headerToolbar>
                                <items>
                                    <StandardListItem title="{i18n>storageBin}" info="{modelLowStock>/Lgpla}" />
                                    <StandardListItem title="{i18n>product}" info="{modelLowStock>/Matnr}" />
                                    <StandardListItem title="{i18n>description}" info="{  path: 'modelLowStock>/Maktx',
                                                                                       formatter: '.formatter.longTextFormatterDeviation'}"
                                        tooltip="{modelLowStock>/Maktx}"/>
                                </items>
                            </List>
                        </f:FormElement>
                        <f:FormElement>
                            <Panel width="auto" class="customListBorder">
                                <OverflowToolbar>
                                    <Title class="customTextSmaller" text="{i18n>quantityAdjustment}"/>
                                </OverflowToolbar>
                                <content>

                                    <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
                                        <StepInput id="stepInputLowStockCheck" value="{modelLowStock>/Qty}" change="onLowStockCheckStepChangedPressed" min="0"/>
                                        <Button text="{i18n>confirmAdjust}" id="lowStockCheckAdjustButton" press="onLowStockCheckAdjustPressed"/>
                                    </HBox>
                                </content>
                            </Panel>
                        </f:FormElement>
                    </f:formElements>

                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</core:FragmentDefinition>