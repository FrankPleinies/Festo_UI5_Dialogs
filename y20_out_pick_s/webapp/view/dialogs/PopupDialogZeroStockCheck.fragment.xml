<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>zeroStockCheck}" id="popupDialogZeroStockCheck" class="sapUiSizeCozy sapUiContentPadding" afterOpen="afterOpenZeroStockCheck">

        <f:Form width="35rem" id="dialogZeroStockCheckForm" editable="true">
            <f:title>
                <core:Title icon="sap-icon://message-popup" text="{i18n>confirmSourceEmpty}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <Panel width="auto" class="customListBorder sapUiMediumMarginTop">
                                <OverflowToolbar>
                                    <Title class="customTextSmaller" text="{i18n>confirmation}"/>
                                </OverflowToolbar>
                                <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
                                    <Button text="{i18n>yesEmpty}" id="zeroStockCheckYesButton" press="onZeroStockCheckYesButtonPressed"/>
                                    <Button text="{i18n>notEmpty}" id="zeroStockCheckNoButton" press="onZeroStockCheckNoButtonPressed"/>
                                </HBox>
                            </Panel>
                        </f:FormElement>
                        <f:FormElement>
                            <Panel width="auto" class="customListBorder sapUiMediumMarginTop">
                                <OverflowToolbar>
                                    <Title class="customTextSmaller" text="{i18n>quanAdjust}"/>
                                </OverflowToolbar>
                                <content>
                                    <HBox class="sapUiSmallMarginTop" justifyContent="SpaceBetween">
                                        <StepInput id="stepInputZeroStockCheck" change="onZeroStockCheckStepChangedPressed" enabled="false" min="0"/>
                                        <Button text="{i18n>confirmAdjust}" id="ZeroStockCheckAdjustButton" enabled="false" press="onZeroStockCheckAdjustPressed"/>
                                    </HBox>
                                </content>
                            </Panel>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</core:FragmentDefinition>